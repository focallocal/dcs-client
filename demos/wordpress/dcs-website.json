{
  "$schema": "https://sylque.github.io/dcs-website-schema/json/schema.json",

  "websiteName": "wordpress",

  "logo": {
    "logoUrl": "https://newyorkyimby.com/wp-content/themes/mh_newsdesk/images/logo_high_res_alpha-min-reg.png",
    "mobileLogoUrl": "https://newyorkyimby.com/wp-content/themes/mh_newsdesk/images/logo_high_res_alpha-min-reg.png",
    "smallLogoUrl": "https://newyorkyimby.com/wp-content/themes/mh_newsdesk/images/Y-logo.png"
  },

  "dcsTag": {
    "maxPageNameLength": 6,
    "maxTriggerIdLength": 9,
    "forceLowercase": true
  },

  "pages": [
    {
      "name": "w_home",
      "url": "https://newyorkyimby.com/",
      "needsProxy": true
    },
    {
      "name": "w_1",
      "url": "https://newyorkyimby.com/2019/08/alvaro-sizas-611-west-56th-street-gets-its-first-windows-in-hells-kitchen.html",
      "needsProxy": true
    }
  ],

  "redirects": [
    {
      "src": { "layout": 0, "pageName": "w_1" },
      "dest": { "layout": 2, "pageName": "@SAME_AS_SRC@", "interactMode": "COMMENT" }
    }
  ],

  "clientData": {
    "decorator": {
      "discourseTitle": "Comments",
      "injectCss": [
        {
          "pageNames": ["*"],
          "css": [".mh-header { display: none }"]
        }
      ]
    },
    "injectTriggersBACKUP": [
      {
        "pageNames": ["w_home"],
        "ids": ["GENERATE"],
        "interactMode": "COMMENT",
        "ui": {
          "cssSelector": ".content-lead-title, .content-list-title",
          "highlightable": true,
          "insertTextSpan": true,
          "insertBalloon": true,
          "insertCountBadge": true,
          "subsection": {
            "begin": ".content-lead-title, .content-list-title",
            "end": "button"
          }
        },
        "discourseTitle": "Comment"
      },
      {
        "pageNames": ["w_1"],
        "ids": ["gen0"],
        "interactMode": "COMMENT",
        "ui": {
          "cssSelector": ".post-title",
          "highlightable": true,
          "insertTextSpan": true,
          "insertBalloon": true,
          "insertCountBadge": true
        },
        "discourseTitle": "Comment"
      }
    ]
  }
}
